<Window x:Class="MusicVibes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="600" Width="1050" WindowStartupLocation="CenterScreen" WindowStyle="None" 
        ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent">
    <Border Background="WhiteSmoke" CornerRadius="40" MouseDown="Border_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="190"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" CornerRadius="40,0,0,40" Background="#8338ec">
                <StackPanel Margin="0,30,0,30">
                    <Image Source="pack://application:,,,/Images/MusicVibes.png" Width="96"/>
                    <Label HorizontalContentAlignment="Center" FontSize="22" Foreground="WhiteSmoke">Music Vibes</Label>
                    <StackPanel Margin="15,15,15,15" Height="Auto">
                        <RadioButton Content="Open Folder" Height="50" Foreground="WhiteSmoke" FontSize="14"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" CornerRadius="0,40,0,0" Background="#3a86ff">
                
            </Border>

            <Border Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" CornerRadius="0,0,40,0" Background="#3a86ff">
                
            </Border>
        </Grid>
    </Border>
</Window>
