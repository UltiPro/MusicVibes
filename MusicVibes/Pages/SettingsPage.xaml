<Page x:Class="MusicVibes.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="860"
      DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderColor1}" Background="{StaticResource BackgroundColor2}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                <TextBlock FontSize="24" FontWeight="Bold" Foreground="{StaticResource FontColor1}" xml:space="preserve">Settings</TextBlock>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Margin="20" Background="White">
            <TextBlock FontSize="18" FontWeight="Bold" Foreground="{StaticResource FontColor1}" Margin="0,0,0,10">Appearance</TextBlock>
            <ComboBox x:Name="ThemeComboBox" SelectedIndex="0" Margin="0,0,0,10">
                <ComboBoxItem Content="Light" />
                <ComboBoxItem Content="Dark" />
            </ComboBox>

            <TextBlock FontSize="18" FontWeight="Bold" Foreground="{StaticResource FontColor1}" Margin="0,0,0,10">Audio Output</TextBlock>
            <ComboBox x:Name="AudioOutputComboBox" Margin="0,0,0,10">
                <!-- Add your audio output options here -->
            </ComboBox>

            <TextBlock FontSize="18" FontWeight="Bold" Foreground="{StaticResource FontColor1}" Margin="0,0,0,10">Audio Quality</TextBlock>
            <ComboBox x:Name="AudioQualityComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Low" />
                <ComboBoxItem Content="Medium" />
                <ComboBoxItem Content="High" />
            </ComboBox>

            <Button Content="Save Settings" HorizontalAlignment="Center" Width="120" Margin="0,20,0,0" />
        </StackPanel>

        <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderColor1}" Background="{StaticResource BackgroundColor2}">
            <DockPanel VerticalAlignment="Center">
                <!-- Add your player control buttons and volume controls here -->
            </DockPanel>
        </Border>
    </Grid>
</Page>
